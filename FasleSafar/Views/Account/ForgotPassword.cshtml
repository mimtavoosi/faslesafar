@model FasleSafar.Models.ForgotPasswordVM
@{
	ViewData["Title"] = "فراموشی کلمه عبور";
}

		<div class="breadcrumbs">
			<div class="container">
				<div class="title-breadcrumb">
					فراموشی کلمه عبور
				</div>
				<ul class="breadcrumb-cate">
					<li><a  asp-controller="Home" asp-action="Index">خانه</a></li>
			<li><a asp-controller="Account" asp-action="ForgotPassword">فراموشی کلمه عبور</a></li>
				</ul>
			</div>
		</div>
				<div class="main-container container main-require">
			<div class="row">
				<div id="content" class="col-md-9">
			@if (!string.IsNullOrEmpty(ViewBag.success))
			{
				<div class="grealert">
					<span class="closebtn" onclick="this.parentElement.style.display='none';">&times;</span>
							ایمیلی حاوی لینک بازنشانی کلمه عبور برای شما ارسال شد <br/>
							پوشه spam را نیز بررسی کنید
				</div>

				<br />
			}
					<form asp-action="ForgotPassword" method="post" class="form-infomation clearfix">
														 <fieldset
														class="tour-infomation clearfix">
														<h3>فراموشی کلمه عبور</h3>
														<div class="form-item item3 required">
								<label asp-for="Email" class="control-label" for="input-email"></label>
								<input asp-for="Email"  placeholder="" id="input-email">
								<span asp-validation-for="Email" class="text-danger"></span>
							</div>
							 <div>
                     <label class="form-check-label">
						</label>
						</div>
							<div class="buttons clearfix">
							<input type="submit" value="تایید" class="btn btn-primary regbtn">
						</div>
						</fieldset>
					</form>
					<p><a asp-controller="Account" asp-action="Login"><span class="mtlink">وارد</span></a> حساب خود در فصل سفر شوید </p>
				</div>
			</div>
		</div>

		<!-- //Main Container -->

		@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}