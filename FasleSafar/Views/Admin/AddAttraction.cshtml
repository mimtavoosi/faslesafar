@model FasleSafar.Models.AddAttractionVM

@{
    ViewData["Title"] = "افزودن جاذبه گردشگری";
     Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<div class="col-sm-12">
    <div class="card-box">
<div class="row">
    <div class="col-lg-6">
         <h4 class="header-title m-t-0 m-b-30">افزودن جاذبه گردشگری</h4>
        <form  class="form-horizontal" asp-action="AddAttraction" method="post" enctype="multipart/form-data">
             <div class="form-group">
                <label asp-for="AttractionName" class="control-label"></label>
                <input asp-for="AttractionName" class="form-control" />
                <span asp-validation-for="AttractionName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DestinationId" class="control-label"></label>
                <select asp-for="DestinationId" class ="form-control" asp-items="@(new SelectList(ViewBag.Destinations, nameof(Destination.DestinationId), nameof(Destination.DestinationName )))">
                   <option disabled selected> یک مقصد را انتخاب کنید</option>
                </select>
                <span asp-validation-for="DestinationId" class="text-danger"></span>  
            </div>
            <div class="form-group">
                <label asp-for="AttractionDescription" class="control-label"></label>
                <textarea asp-for="AttractionDescription" cols="6" rows="10" class="form-control"></textarea>
                <span asp-validation-for="AttractionDescription" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="GeoCoordinates" class="control-label"></label>
                <input asp-for="GeoCoordinates" class="form-control" />
                <span asp-validation-for="GeoCoordinates" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BigImage" class="control-label"></label>
                <input asp-for="BigImage" class="dropify" accept="image/png, image/jpeg">
                <br /><span asp-validation-for="BigImage" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AlbumImages" class="control-label"></label>
                <input asp-for="AlbumImages" class="dropify" accept="image/png, image/jpeg" multiple>
                <br /><span asp-validation-for="AlbumImages" class="text-danger"></span>
            </div>
           <button type="submit" class="savebtn btn btn-success btn-rounded w-md waves-effect waves-light m-b-5">ذخیره</button>
            <a asp-action="ShowAttractions" asp-route-pageid="@ViewBag.AttractionsPageID" type="button" class="savebtn btn btn-danger btn-rounded w-md waves-effect waves-light m-b-5">بازگشت</a>
        </form>
    </div>
</div>
</div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");
}
}
