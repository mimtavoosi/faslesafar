          {
                <li class="@(((int)ViewBag.DestinationsPageID==i)?"active":"")"><a href="/Admin/ShowDestinations?pageid=@i">@i<span class="sr-only">(current)</span></a></li>
          }
@*            <li><a aria-label="Next" href="#"><span aria-hidden="true">»</span></a></li>
*@        </ul>
    </nav>
</div>